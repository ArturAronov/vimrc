" Automatically linebreak text that extends beyond the screen length
set linebreak

" Show the numbers
set number

" Status bar
set laststatus=2

" Change tab spacing
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" Autoindent
set autoindent 

" Allow yy (yank)
set clipboard=unnamed

" Enables syntax highlighting
syntax on

" Allows couror line
set cursorline

" Colorscheme
syntax enable
colorscheme 1halfdark
highlight Normal ctermbg=Black
